{
   "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node",
      "target": "es2021",
      "lib": ["es2021"],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   },
   "include": ["src/**/*"]
}
